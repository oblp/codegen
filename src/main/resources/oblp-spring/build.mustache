plugins {
    id 'org.springframework.boot' version '2.3.5.RELEASE'
    id 'io.spring.dependency-management' version '1.0.10.RELEASE'
    id 'java'
}

group = 'com.slabs'
version = '0.0.4-SNAPSHOT'
sourceCompatibility = '1.8'

configurations {
    compileOnly {
        extendsFrom annotationProcessor
    }
}

repositories {
    mavenLocal()
    mavenCentral()
}

dependencies {
    // jdbc
    implementation 'org.springframework.boot:spring-boot-starter-jdbc'
    runtimeOnly 'mysql:mysql-connector-java'
    // orm
    implementation 'com.baomidou:mybatis-plus-boot-starter:3.4.0'
    implementation 'org.mybatis.spring.boot:mybatis-spring-boot-starter:2.1.3'
    // migration
    implementation 'org.flywaydb:flyway-core'
    // web
    implementation 'org.springframework.boot:spring-boot-starter-web'
    // openapi
    implementation 'io.springfox:springfox-swagger2:3.0.0'
    implementation 'io.springfox:springfox-boot-starter:3.0.0'
    // wechat mini program
    implementation 'com.github.binarywang:weixin-java-miniapp:3.9.4.B'
    // token
    implementation 'io.jsonwebtoken:jjwt-api:0.11.2'
    runtimeOnly 'io.jsonwebtoken:jjwt-impl:0.11.2'
    runtimeOnly 'io.jsonwebtoken:jjwt-jackson:0.11.2'
    // lombok
    compileOnly 'org.projectlombok:lombok'
    annotationProcessor 'org.projectlombok:lombok'
    testCompileOnly 'org.projectlombok:lombok'
    testAnnotationProcessor 'org.projectlombok:lombok'
    // bean mapper
    compileOnly 'org.mapstruct:mapstruct:1.3.1.Final'
    annotationProcessor 'org.mapstruct:mapstruct-processor:1.3.1.Final'
    testCompileOnly 'org.mapstruct:mapstruct:1.3.1.Final'
    testAnnotationProcessor 'org.mapstruct:mapstruct-processor:1.3.1.Final'
    // pinyin util
    implementation 'com.github.promeg:tinypinyin:2.0.3'
    implementation 'com.github.promeg:tinypinyin-lexicons-java-cncity:2.0.3'
    // validation
    implementation 'org.springframework.boot:spring-boot-starter-validation'
    // aop
    implementation 'org.springframework.boot:spring-boot-starter-aop'
    // devtool
//    developmentOnly 'org.springframework.boot:spring-boot-devtools'
//    annotationProcessor 'org.springframework.boot:spring-boot-configuration-processor'
//    implementation 'org.springframework.boot:spring-boot-starter-actuator'
    // encrypt
    implementation 'at.favre.lib:bcrypt:0.9.0'
    // test
    testImplementation "org.mockito:mockito-core:2.+"
    testImplementation('org.springframework.boot:spring-boot-starter-test') {
        exclude group: 'org.junit.vintage', module: 'junit-vintage-engine'
    }
}

test {
    useJUnitPlatform()
}

